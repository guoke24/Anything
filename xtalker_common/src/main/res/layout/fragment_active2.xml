<!--使用帧布局-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guohao.xtalker.frags.main.ActiveFragment2">

    <!--v7包的RecyclerView-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main_recycler"
        android:clipToPadding="false"
        android:elevation="1dp"
        android:outlineProvider="bounds"
        android:paddingBottom="@dimen/len_12"
        android:paddingTop="@dimen/len_12"

        tools:targetApi="lollipop" />

    <!--占位布局-->
    <com.guohao.common.widget.EmptyView
        android:visibility="gone"
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>